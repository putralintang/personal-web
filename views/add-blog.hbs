<html>
    <head>
        <title>Halaman Blog</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="../public/assets/css/style.css">
    </head>
    <body>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#"><img src="../public/assets/images/logo.png" alt="logo"></a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
            
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-orange" aria-current="page" href="/blog">Blog</a>
                        </li>
                    </ul>
                
                    <a class="btn px-3 text-white bg-orange" type="submit">Contact Me</a>
              
                </div>
            </div>
        </nav>
        <!-- Akhir Navbar -->

        <!-- Form Blog -->

        <div class="container-fluid d-flex align-items-center justify-content-center">
            <div class="card px-4 py-3" style="border-radius: 8px; box-shadow: 0 0 5px">
                <div class="container-form">
                    <p class="h1 text-center mb-5">Create Post Blog</p>
    
                    <form action="/blog" method="POST">
                        <div class="mb-3">
                          <label for="inputTitle" class="form-label">Title</label>
                          <input name="inputTitle" type="text" class="form-control" id="inputTitle">
                        </div>
                        <div class="mb-3">
                            <label for="inputContent" class="form-label">Content</label>
                            <textarea name="inputContent" class="form-control" id="inputContent" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="inputImage" class="form-label">Upload Image</label>
                            <input class="form-control" type="file" id="inputImage">
                        </div>
    
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn bg-orange text-white" type="submit">Post Blog</button>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>






















        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>